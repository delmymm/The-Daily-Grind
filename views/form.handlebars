<main>
  <div class="jumbotron text-center">
    <form action="/api/drink" method="post" id="form">
      <div class="form-group">
        <h1>Add your Favorite Store and Drink</h1>
        <label for="store_name">Store Name:</label>
        <input type="text" class="form-control" placeholder="Enter Store Name" id="store_name" name="store_name">
      </div>
      <div class="form-group">
        <label for="street_address">Street Address:</label>
        <input type="text" class="form-control" placeholder="Enter Address" id="address" name="address">
      </div>
      <div class="form-group">
        <label for="city_name">City Name:</label>
        <input type="text" class="form-control" placeholder="Enter City" id="city" name="city">
      </div>
      <div class="form-group">
        <label for="state_and_zip">State:</label>
        <input type="text" class="form-control" placeholder="Enter State and zip" id="state" name="state">
      </div>
      <div class="form-group">
        <label for="drink_name">Favorite Drink:</label>
        <input type="text" class="form-control" placeholder="Favorite Drink" id="drink" name="drink">
      </div>
      <div class="form-group">
        <label for="drink_description">Drink Description:</label>
        <input type="text" class="form-control" placeholder="Drink Description" id="description"
          name="drink_description">
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm">

            <label class="form-check-label">
              <input class="form-check-input" type="checkbox"> Add to Coffee Drinks
            </label>
          </div>
          <div class="col-sm">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox"> Add to Tea Drinks
            </label>
          </div>
          <div class="col-sm">
            <label class="form-check-label">
              <input class="form-check-input" type="checkbox"> Add to Kids Drinks
            </label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

