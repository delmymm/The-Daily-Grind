<body style = "background-color:#4869A0; padding: 50px;">

    <!-- login card -->
    <div class="col d-flex justify-content-center" id = "loginInfo">
        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">Welcome to The Daily Grind!</h5>
            <form>
                <div class="form-group">
                <label for="inputUser">Username</label>
                <input type="username" class="form-control" id="inputUser" aria-describedby="emailHelp" placeholder="username">
                <small id="userHelp" class="form-text text-muted">We'll never share your information with anyone else.</small>
                </div>
                <div class="form-group">
                <label for="inputPassword1">Password</label>
                <input type="password" class="form-control" id="inputPassword1" placeholder="password">
                </div>
                <button type="submit" class="btn btn-secondary">Log In ☕</button>
            </form>
            </div>
        </div>
 
<div id="login">

    <h1><strong>Honey Files</strong></h1>

    <div class="login-box shadow">
        <form action="/login" method='post' class='login-form'>

            <i id='username-input-icon' class='icon-user'></i>
            <input id="username" autocomplete="off" placeholder="Username" class='dark' type="text" name="username">

            <i id='password-input-icon' class='icon-lock'></i>
            <input id="password" autocomplete="off" placeholder="Password" class='dark' type="password" name="password">

            <input type="submit" class='button large' value="Please, login to continue.">

        </form>

    </div>
    
  </body>

<script src="../public/js/login.js"></script>

