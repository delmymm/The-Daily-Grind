<main style="background-color:#4869A0; padding: 50px;">
    <!-- login card -->
    <div class="col d-flex justify-content-center" id="loginInfo">
        <div class="card text-center" style="width: 18rem;">
            <div class="card-main">
                <h5 class="card-title">Welcome to The Daily Grind!</h5>
                <form action="/api/user/login" id="login" method="POST">
                    <div class="form-group">
                        <label for="email">Email Id <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" name="username" id="email"
                            placeholder="Enter your email id">
                        <small id="userHelp" class="form-text text-muted">We'll never share your information with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="password">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Enter Your Password">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-info btn-block">
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-8">
                                New user? Register <a href="/register">here</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

